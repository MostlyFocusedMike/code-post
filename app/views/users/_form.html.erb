
<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |error| %>
       <li><%= error %></li>
    <% end %>
  </ul>

<% end %>
  <%= f.label :username %>
  <%= f.text_field :username, placeholder: "Your username here"%><br />

  <%= f.label :email %>
  <%= f.email_field :email, placeholder: "user@example.com" %><br />

  <%= f.label :password %>
  <%= f.password_field :password %><br />

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br />

  <%= f.submit %>
