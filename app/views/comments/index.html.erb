<%= render 'users/user' %>
<h3>Commented on Posts</h3>

<%@user.commented_posts.uniq.each do |post| %>
<h1><%= link_to post.title, post_path(post) %></h1>
  <% post.comments.each do |comment| %>
    <% if comment.user == @user %>
    <p>  <%= comment.content%></p>
    <% end %>
  <% end %>
<% end %>
